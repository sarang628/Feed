<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="uiState"
            type="com.example.screen_feed.uistate.FeedTopUIState" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp">

        <ImageView
            android:id="@+id/tb_feed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="@{()->uiState.onMenuClickListener.invoke(uiState.reviewId)}"
            android:padding="10dp"
            android:src="@drawable/ic_dot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_profile"
            loadCircleImage="@{uiState.profilePictureUrl}"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="@{()->uiState.onProfileImageClickListener.invoke(uiState.reviewId)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()->uiState.onNameClickListener.invoke(uiState.reviewId)}"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@{uiState.name}"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/tv_restaurant"
            app:layout_constraintStart_toEndOf="@+id/iv_profile"
            app:layout_constraintTop_toTopOf="@+id/iv_profile"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="name" />

        <TextView
            android:id="@+id/tv_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()->uiState.onRestaurantClickListener.invoke(uiState.reviewId)}"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@{uiState.restaurantName}"
            app:layout_constraintBottom_toBottomOf="@+id/iv_profile"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:text="restaurant"
            tools:visibility="visible" />

        <RatingBar
            android:id="@+id/rb_feed"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="@{uiState.rating}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintStart_toEndOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="@+id/tv_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>