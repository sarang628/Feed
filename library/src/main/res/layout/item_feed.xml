<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="uiState"
            type="com.example.screen_feed.uistate.FeedUiState" />

        <import type="android.view.View" />
    </data>

    <!-- root element  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/cv_feed_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- review image area  -->
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/cv_page"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_feed_top" />

        <!-- bottom area -->
        <include
            android:id="@+id/include"
            layout="@layout/item_feed_bottom"
            state="@{uiState.itemFeedBottomUiState}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_page" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_indicator"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorSecondaryLight"
            app:layout_constraintEnd_toEndOf="@+id/cv_page"
            app:layout_constraintStart_toStartOf="@+id/cv_page"
            app:layout_constraintTop_toBottomOf="@+id/cv_page"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>