<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="state"
            type="com.example.screen_feed.uistate.FeedBottomUIState" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_icons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_like"
                select="@{state.isLike}"
                android:layout_width="38dp"
                android:layout_height="45dp"
                android:onClick="@{()->state.onLikeClickListener.invoke(state.reviewId)}"
                android:paddingStart="8dp"
                android:paddingRight="5dp"
                android:src="@drawable/selector_like"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/button6"
                android:layout_width="38dp"
                android:layout_height="45dp"
                android:onClick="@{()->state.onCommentClickListener.invoke(state.reviewId)}"
                android:paddingStart="8dp"
                android:paddingRight="5dp"
                android:src="@drawable/chat"
                app:layout_constraintStart_toEndOf="@+id/btn_like"
                app:layout_constraintTop_toTopOf="@+id/btn_like" />

            <ImageView
                android:id="@+id/button7"
                android:layout_width="38dp"
                android:layout_height="45dp"
                android:onClick="@{()->state.onShareClickListener.invoke(state.reviewId)}"
                android:paddingStart="8dp"
                android:paddingRight="5dp"
                android:src="@drawable/message"
                app:layout_constraintStart_toEndOf="@+id/button6"
                app:layout_constraintTop_toTopOf="@+id/button6" />

            <ImageView
                android:id="@+id/button8"
                select="@{state.isFavorite}"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:onClick="@{()->state.onClickFavoriteListener.invoke(state.reviewId)}"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/selector_favorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_like" />


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/cl_icons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cl_icons"
                app:tabIndicatorGravity="center"
                app:tabIndicatorHeight="2.5dp"
                app:tabMaxWidth="10dp"
                app:tabRippleColor="@null" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView31"
            app:formatText='@{String.format(@string/feed_like, state.likeAmount)}'
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:visibility="@{state.visibleLike ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_icons"
            tools:text="Like 20"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView30"
            formatText='@{String.format(@string/feed_contents, state.author,state.comment)}'
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView31"
            tools:text="Kyile Jenner wow" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:text="victoriavillarroel wow"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:text="yrispalmer Omg! these greens tho"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView"
            app:formatText='@{String.format(@string/feed_comment, state.commentAmount)}'
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="@{state.visibleComment ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView30"
            tools:text="댓글 6,313개 모두보기"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="16dp"
            android:text="34분 전"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>